extends ../layout

block content
  h2 新メンバー追加

  form(action=`/teams/${team.id}/members`,method="post")
    _csrf

    select(name="userId")
      each user in users
        option(value=user.id)= user.displayName
    input(type="submit")

  h2 メンバー一覧
  table(border="1")
    tbody
      th 役割
      th 名前

      each member in members
        tr
          td= member.role
          td= member.userInfo.displayName
