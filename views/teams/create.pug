extends ../layout

block content
  h1 チーム作成

  - if(err)
      ul.errors
        each error in err.errors
          li= error.message

  form.box(action="/teams", method="post")
    _csrf

    div
      label(for="title") チーム名
      input#title(name="name")
    div.actions
      input(type="submit")